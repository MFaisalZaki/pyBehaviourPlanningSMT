Bootstrap: docker
From: python:3.12-slim

%environment
    export PYTHONUNBUFFERED=1
    export PYTHONDONTWRITEBYTECODE=1

%labels
    Maintainer YourName

%files
    . /app

%post
    apt-get update && apt-get install -y \
        zlib1g-dev libjpeg-dev libfreetype6-dev \
        libpng-dev libtiff5-dev libopenjp2-7 \
        gcc g++ git python3-tk libgdal-dev \
        protobuf-compiler cmake \
        default-jre
    
    cd /app
    pip install setuptools
    pip install unified-planning
    pip install --no-cache up-symk
    pip install git+https://github.com/MFaisalZaki/forbiditerative.git
    pip install lark
    pip install up-fast-downward
    pip install matplotlib 
    pip install seaborn
    pip install .

    pip uninstall pypmt -y
    pip install git+https://github.com/pyPMT/pyPMT.git@d44efb71746b3a91e7fb1926b4405bd14f9df33b

%runscript
    exec python /app/paper_experiments/run-benchmark.py "$@"