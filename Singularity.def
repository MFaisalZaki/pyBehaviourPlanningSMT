Bootstrap: docker
From: python:3.12-slim

%environment
    export PYTHONUNBUFFERED=1
    export PYTHONDONTWRITEBYTECODE=1

%labels
    Maintainer YourName

%files
    . /app

%post
    apt-get update && apt-get install -y \
        zlib1g-dev libjpeg-dev libfreetype6-dev \
        libpng-dev libtiff5-dev libopenjp2-7 \
        gcc g++ git python3-tk libgdal-dev \
        protobuf-compiler cmake \
        default-jre
    
    cd /app
    pip install setuptools
    pip install unified-planning
    pip install --no-cache up-symk
    pip install git+https://github.com/MFaisalZaki/forbiditerative.git
    pip install lark
    pip install up-fast-downward
    pip install matplotlib 
    pip install seaborn
    pip install .

    mkdir -p /app/sandbox-benchmark/classical-domains
    git clone --recursive https://github.com/AI-Planning/classical-domains.git /app/sandbox-benchmark/classical-domains
    git clone --recursive https://github.com/pyPMT/numeric-domains.git /app/sandbox-benchmark/numeric-domains

    python /app/paper_experiments/generate-benchmark-slurm-tasks.py --planning-type classical        --sandbox-dir /app/sandbox-benchmark-classical        --planning-tasks-dir /app/sandbox-benchmark/classical-domains/classical --resources-dir /app/paper_experiments/data/classical-domains-ru-info
    python /app/paper_experiments/generate-benchmark-slurm-tasks.py --planning-type oversubscription --sandbox-dir /app/sandbox-benchmark-oversubscription --planning-tasks-dir /app/sandbox-benchmark/classical-domains/classical
    python /app/paper_experiments/generate-benchmark-slurm-tasks.py --planning-type numerical        --sandbox-dir /app/sandbox-benchmark-numerical        --planning-tasks-dir /app/sandbox-benchmark/numeric-domains             --resources-dir /app/paper_experiments/data/functions-domains-info

%runscript
    exec python /app/paper_experiments/run-benchmark.py "$@"